@using MyWebsite.Helper
@model MyWebsite.Models.Purchase

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style = "color:red;">Delete</h2>

<h3 style="@Colors.selected">Are you sure you want to delete this?</h3>
<div>
    <h4>Purchase</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt style="@Colors.LightColorText">
            @Html.DisplayNameFor(model => model.PurchaseId)
        </dt>

        <dd style="@Colors.DarkText">
            @Html.DisplayFor(model => model.PurchaseId)
        </dd>

        <dt style="@Colors.LightColorText">
            @Html.DisplayNameFor(model => model.PurchaseDate)
        </dt>

        <dd style="@Colors.DarkText">
            @Html.DisplayFor(model => model.PurchaseDate)
        </dd>

        <dt style="@Colors.LightColorText">
            @Html.DisplayNameFor(model => model.Payment)
        </dt>

        <dd style="@Colors.DarkText">
            @Html.DisplayFor(model => model.Payment)
        </dd>

        <dt style="@Colors.LightColorText">
            Image
        </dt>

        <dd>
            @Html.GetThumbnail(Model.Product.ProductImages.ToList()[0].Image)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-dark" style = "color:red;border:1px solid;border-radius:2mm;background-color:black" />

        </div>
        <p style="margin-top:5px">
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-darl", @style = @Colors.Yellow + " border:1px solid;border-radius:2mm" })
        </p>
    }
</div>
