@using MyWebsite.Helper
@model MyWebsite.Models.Purchase

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="@Colors.DarkText">Details</h2>

<div>
    <h4 style="@Colors.DarkText">Purchase</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt style="@Colors.LightColorText">
            @Html.DisplayNameFor(model => model.PurchaseId)
        </dt>

        <dd style="@Colors.DarkText">
            @Html.DisplayFor(model => model.PurchaseId)
        </dd>

        <dt style="@Colors.LightColorText">
            @Html.DisplayNameFor(model => model.PurchaseDate)
        </dt>

        <dd style="@Colors.DarkText">
            @Html.DisplayFor(model => model.PurchaseDate)
        </dd>

        <dt style="@Colors.LightColorText">
            @Html.DisplayNameFor(model => model.Payment)
        </dt>

        <dd style="@Colors.DarkText">
            @Html.DisplayFor(model => model.Payment)
        </dd>

        <dt style="@Colors.LightColorText">
            Image
        </dt>

        <dd>
            @Html.GetThumbnail(Model.Product.ProductImages.ToList()[0].Image)
        </dd>

    </dl>
</div>
